<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModel.profileActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewModel.profileActivity"
        android:orientation="vertical">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/defpdp"
        tools:srcCompat="@drawable/defpdp">
    </ImageView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/button"
                android:text="@string/UnlockFields"
                >
            </TextView>
            <ImageView android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/edit"
                tools:srcCompat="@drawable/edit">

            </ImageView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lyt_firstName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:boxStrokeErrorColor="@color/txtFieldError"
            app:errorIconTint="@color/txtFieldError"
            app:errorTextColor="@color/txtFieldError"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/avatar"
            app:startIconTint="@color/grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_firstName"
                android:layout_width="match_parent"
                android:enabled="false"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_clear"
                android:hint="@string/firstName"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lyt_lastName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:boxStrokeErrorColor="@color/txtFieldError"
            app:errorIconTint="@color/txtFieldError"
            app:errorTextColor="@color/txtFieldError"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/avatar"

            app:startIconTint="@color/grey">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_lastName"
                android:layout_width="match_parent"
                android:drawableEnd="@drawable/ic_clear"
                android:layout_weight="1"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="@string/lastName"
                android:inputType="textEmailAddress"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lyt_driverLicense"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:boxStrokeErrorColor="@color/txtFieldError"
        app:errorIconTint="@color/txtFieldError"
        app:errorTextColor="@color/txtFieldError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/card"
        app:startIconTint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_driverLicense"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_clear"
            android:enabled="false"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/driverLicense"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lyt_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:boxStrokeErrorColor="@color/txtFieldError"
        app:errorIconTint="@color/txtFieldError"
        app:errorTextColor="@color/txtFieldError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/emailicon"
        app:startIconTint="@color/grey">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email1"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_clear"
            android:enabled="false"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
        android:id="@+id/btnConfirm"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:background="@drawable/rounded_button"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey"
            />

    <Button
        android:id="@+id/btnChangePwd"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/changePwd"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="13dp"
        android:background="@drawable/rounded_button_green"
        app:backgroundTint="@color/green"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        />
    </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
</FrameLayout>